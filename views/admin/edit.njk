{% extends "admin/layout.njk" %}

{% block content %}    

<section class="edit-form">
           
        <div class="second-header">
            <h2>Editando receita</h2>

        <form method="POST" action="/admin/recipes?_method=PUT">
                <input 
                    type="hidden"
                    name="id"
                    value="{{ recipe.id }}">    
                <button class="primary_button" type="submit">Salvar receita</button>

            </div>
            
            {% include 'admin/fields.njk' %}

            {% block script %} 
                <script src="/add-script.js"></script>
            {% endblock %}
             
        </form>

        <form id="delete" method="post" action="/admin/recipes?_method=DELETE">
            <input 
                type="hidden"
                name="id"
                value="{{ recipe.id }}">
            <button type="submit">Deletar</button>
        </form>

    </section>

{% endblock content %} 