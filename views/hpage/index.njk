{% extends "./layout.njk" %}    
    
{% block content %}
<section id="featured">
  <div class="cards">
  
          {% for recipe in recipes %}
            
              <div class="card">
                <a href="/recipes/{{recipe.id}}" target="_blank"></a>
                <div class="card__image">
                  <img src="{{recipe.image}}" alt="{{recipe.title}}">
                </div>
                <div class="card__title">
                  <p>{{recipe.title}}</p>
                </div>
                <div class="card__author">
                  <p>por {{recipe.author}}</p>
                </div>
               
              </div>
            
          {%endfor%}
  </div>
</section>
    
{% endblock content %}